<%= form_tag '/login' do %>
  <div class="form-group row">
    <div class="col-md-6 col-md-offset-3">
    <h1>Login</h1>
      Email <%= text_field_tag :email,"" , class: 'form-control' %>
      Password <%= password_field_tag :password, "", class: 'form-control' %>
      <br/>
      <%= submit_tag "Submit", class: "form-control btn btn-info" %>
    </div>
  </div>
<% end %> 